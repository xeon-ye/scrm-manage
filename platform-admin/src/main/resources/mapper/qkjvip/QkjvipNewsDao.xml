<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.qkjvip.dao.QkjvipNewsDao">

    <sql id="selectSql">
        SELECT T.* FROM QKJVIP_NEWS T
        WHERE 1=1
        <if test="params.title != null and params.title.trim() != ''">
            AND T.title LIKE '%${params.title}%'
        </if>
    </sql>

    <select id="selectQkjvipNewsPage" resultType="com.platform.modules.qkjvip.entity.QkjvipNewsEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.qkjvip.entity.QkjvipNewsEntity">
        <include refid="selectSql"/>
    </select>
</mapper>